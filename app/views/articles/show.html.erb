<header>
	<h1><%= @article.title %><span class="edit-link"><%= link_to 'Edit', edit_article_path(@article) %></span></h1>
</header>

<div class="article">
	<p><%= @article.text %></p>
</div>

<div class="comments">
	<h2>Comments</h2>
	<%= render @article.comments%>

	<h3>Add a comment:</h3>
	<%= render 'comments/form' %>
</div>
