<header>
	<h1><%= @article.title %></h1>
</header>

<div class="article">
	<p><%= @article.text %></p>
	<div class="links">
		<%= link_to 'Back', request.referrer %>
		<%= link_to 'Edit', edit_article_path(@article) %></br>
	</div>
</div>

<div class="comments">
	<h2>Comments</h2>
	<%= render @article.comments%>

	<h3>Add a comment:</h3>
	<%= render 'comments/form' %>
</div>
