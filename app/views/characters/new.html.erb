<header>
  <h1>Nuevo Personaje</h1>
</header>

<%= form_with(model: @character) do |form| %>
  <%= form.hidden_field :period_id, :value => @character.period_id%>
 
  <p>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
  </p>
 
  <p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
  </p>
 
  <p>
  <%= form.submit %>
  </p>
 
<% end %>