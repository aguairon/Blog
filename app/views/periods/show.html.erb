<header class="header period-header">
	<h1><%= @period.title %>
		<% if admin_signed_in? %>
			<a class="edit-link"><%= link_to "Editar", edit_period_path(@period)%></a>
		<% end %>
	</h1>
</header>

<div class="seccions">
	<div class="seccion seccion_articulos">
		<h2>Artículos</h2>
		<% if @articles.size > 0 %>
			<div class="list articles_list">
				<%= render :partial => "aplication/article", :collection => @articles %>
			</div>
			<div class="more more-articules"><%= link_to "Más artículos", articles_path(period_id: @period) %></div>
		<% else %>
			<p class="empty">Viene pronto</p>
		<% end %>
	</div>

	<div class="seccion seccion_personajes">
		<h2>Personajes</h2>
		<% if @characters.size > 0 %>
			<div class="list characters-list">
				<%= render :partial => "aplication/character", :collection => @characters %>
			</div>
			<div class="more more-characters"><%= link_to "Más personajes", characters_path(period_id: @period) %></div>
		<% else %>
				<p class="empty">Viene pronto</p>
		<% end %>
	</div>

	<div class="seccion seccion_galeria">
		<h2>Galeria</h2>
	</div>

	<div class="seccion seccion_bibliografia">
		<h2>Bibliografia</h2>
	</div>
</div>

